    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vitest": "^0.11.0",
    "eslint-plugin-vue": "^9.22.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.4",
    "prettier-plugin-vue": "^4.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
